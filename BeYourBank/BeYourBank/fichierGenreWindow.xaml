<Window x:Class="BeYourBank.fichierGenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeYourBank"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Récupération d'identifiants" Height="180" Width="350">
    <Grid Background="#FFF0F0F0">
        <Label x:Name="lbl_fichierG" Content="Le fichier a bien été créé dans l'emplacement spécifié!&#xa; Voulez-vous envoyez ce fichier par mail ?" HorizontalAlignment="Left" Height="56" Margin="10,10,0,0" VerticalAlignment="Top" Width="322"/>
        <Label x:Name="lbl_wifi" Content="(Une connexion internet est requise dans ce cas là)"  HorizontalAlignment="Left" Height="34" Margin="10,48,0,0" VerticalAlignment="Top" Width="278" FontStyle="Italic"/>
        <Button x:Name="btn_envoyer" Content="Envoyer" HorizontalAlignment="Left" Height="26" Margin="80,94,0,0" VerticalAlignment="Top" Width="82" FontSize="12" Background="#FF182E81" Click="btn_envoyer_Click"/>
        <Button x:Name="btn_cancel" Content="Annuler" HorizontalAlignment="Left" Height="26" Margin="188,94,0,0" VerticalAlignment="Top" Width="82" FontSize="12" Background="#FF182E81" Click="btn_cancel_Click"/>
    </Grid>
</Window>
