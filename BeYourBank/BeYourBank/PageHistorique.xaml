<Page x:Class="BeYourBank.PageHistorique"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeYourBank"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Page_creationDeCartes" Background="White">
    <Grid> 
        <DataGrid x:Name="dataGrid_history" SelectionMode="Single" SelectionUnit="FullRow" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,21,0,0" Height="448" Width="649" AutoGenerateColumns="False" MinRowHeight="20" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding dateOperation, StringFormat=\{0:dd-MM-yyyy\}}" Width="130" Header="Date Opération"/>
                <DataGridTextColumn Binding="{Binding TypeOperation}" Width="130" Header="Type Opération"/>
                <DataGridTextColumn Binding="{Binding nbrB}" Width="160" Header="Nombre de bénéficiaires"/>
               <!-- <DataGridTextColumn Binding="{Binding noTelBeneficiaire}" Width="110" Header="Téléphone"/>
               <DataGridTextColumn Binding="{Binding profession}" Width="130" Header="Profession"/> -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
