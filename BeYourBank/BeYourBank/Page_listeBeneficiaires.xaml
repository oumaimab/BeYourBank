<Page x:Class="BeYourBank.Page_listeBeneficiaires"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeYourBank"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Page_listeBeneficiaires" Background="White" Loaded="Page_Loaded">

    <Grid>
        <Label x:Name="lbl_user_id" Visibility="Hidden" />
        <DataGrid x:Name="dataGrid_beneficiaires" Margin="23,82,23,0" VerticalAlignment="Top" Height="337" AutoGenerateColumns="False" MinRowHeight="20"  SelectionMode="Extended" SelectionUnit="FullRow" CanUserAddRows="False" SelectionChanged="dataGrid_beneficiaires_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding noCINBeneficiaire}" Width="110" Header="Numéro CIN"/>
                <DataGridTextColumn Binding="{Binding nomBeneficiaire}" Width="110" Header="Nom"/>
                <DataGridTextColumn Binding="{Binding prenomBeneficiaire}" Width="110" Header="Prénom"/>
                <DataGridTextColumn Binding="{Binding noTelBeneficiaire}" Width="110" Header="Téléphone"/>
                <DataGridTextColumn Binding="{Binding profession}" Width="130" Header="Profession"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="label" Content="La liste des bénéficiaires de cartes :" HorizontalAlignment="Left" Margin="38,30,0,0" VerticalAlignment="Top" Height="30" Width="202"/>
        <Button x:Name="btn_ajouter" Content="Ajouter" HorizontalAlignment="Left" Margin="196,440,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FF182E81" FontSize="13" BorderBrush="#FF182E81" Click="btn_ajouter_Click"/>
        <Button x:Name="btn_import" Content="Importer liste" HorizontalAlignment="Left" Margin="495,21,0,0" VerticalAlignment="Top" Width="106" Height="40" Background="#FF182E81" FontSize="12" Click="btn_import_Click" />
        <Button x:Name="btn_supprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="445,440,0,0" VerticalAlignment="Top"  Width="96" Height="30" Background="#FF182E81" FontSize="13" BorderBrush="#FF182E81" Click="btn_supprimer_Click" IsEnabled="False"/>
        <Button x:Name="refresh" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Margin="626,24,0,0" Height="35" Click="refresh_Click">
            <Button.Background>
                <ImageBrush ImageSource="images/refresh.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="btn_modifier" Content="Modifier" HorizontalAlignment="Left" Width="90" Height="30" Margin="320,440,0,0" VerticalAlignment="Top" Background="#FF182E81" BorderBrush="#FF182E81" IsEnabled="False" Click="btn_modifier_Click"/>

    </Grid>
</Page>
